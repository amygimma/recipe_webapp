<h1>New Recipe</h1>


<%= form_for :recipe, url: recipes_path do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :estimated_time %>
    <%= f.text_field :estimated_time %>
  </p>
   
  <p>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
  </p>
  
   
 
  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </p>
  
  <p>
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </p>
  
  <p>
    <%= f.submit 'Save Recipe' %>
  </p>
  

  
<% end %>
